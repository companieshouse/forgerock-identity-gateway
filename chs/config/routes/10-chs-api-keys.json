{
  "name": "CHS API Keys",
  "baseURI": "https://&{ig.host}",
  "globalDecorators": {
    "capture": "all"
  },
  "heap": [
    {
      "name": "Continue",
      "type": "Delegate",
      "MyCapture": "all",
      "config": {
        "delegate": "ForgeRockClientHandler"
      }
    },
    {
      "name": "DispatchHandler",
      "type": "DispatchHandler",
      "config": {
        "bindings": [
          {
            "baseURI": "https://&{api.load.balancer}",
            "handler": "ReverseProxyHandler"
          }
        ]
      }
    },
    {
      "name": "ReverseProxyHandler",
      "type": "ReverseProxyHandler",
      "capture": [
        "request",
        "response"
      ],
      "config": {
        "tls": {
          "type": "ClientTlsOptions",
          "config": {
            "trustManager": {
              "type": "TrustAllManager"
            }
          }
        },
        "hostnameVerifier": "ALLOW_ALL"
      }
    },
    {
      "name": "SecretKeyPropertyFormat-SigningKey",
      "type": "SecretKeyPropertyFormat",
      "config": {
        "format": "BASE64",
        "algorithm": "AES"
      }
    },
    {
      "name": "SecretStore-ENV",
      "type": "SystemAndEnvSecretStore",
      "config": {
        "mappings": [{
          "secretId": "signing.key.secret",
          "format": "SecretKeyPropertyFormat-SigningKey"
        }]
      }
    }
  ],
  "handler": {
    "type": "DispatchHandler",
    "config": {
      "bindings": [
        {
          "baseURI": "https://&{api.load.balancer}",
          "handler": {
            "name": "OIDC Handler",
            "type": "Chain",
            "config": {
              "filters": [
                {
                  "name": "OAuth2ResourceServerFilter-FIDC",
                  "type": "OAuth2ResourceServerFilter",
                  "config": {
                    "scopes": [
                      "https://api.companieshouse.gov.uk/company/admin.write-full"
                    ],
                    "requireHttps": false,
                    "realm": "alpha",
                    "accessTokenResolver": {
                      "name": "TokenIntrospectionAccessTokenResolver-FIDC",
                      "type": "TokenIntrospectionAccessTokenResolver",
                      "config": {
                        "endpoint": "https://&{fidc.fqdn}/am/oauth2/realms/root/realms/alpha/introspect",
                        "providerHandler": {
                          "type": "Chain",
                          "config": {
                            "filters": [
                              {
                                "type": "HeaderFilter",
                                "config": {
                                  "messageType": "request",
                                  "add": {
                                    "Authorization": [
                                      "Basic ${encodeBase64('CHSWebClient:CHSWebClient')}"
                                    ]
                                  }
                                }
                              }
                            ],
                            "handler": "ForgeRockClientHandler"
                          }
                        }
                      }
                    }
                  }
                },
                {
                  "name": "AddERICPassthroughAttributes",
                  "type": "ScriptableFilter",
                  "config": {
                    "type": "application/x-groovy",
                    "file": "addERICPassthroughAttributes.groovy"
                  }
                },
                {
                  "name": "JwtBuilderFilter-ERIC",
                  "type": "JwtBuilderFilter",
                  "config": {
                    "template": {
                      "_id": "6391c77d3f43e430d5090321",
                      "type": "oauth2",
                      "EricPassthroughAuth": false,
                      "iss": "Companies-House-ERIC",
                      "sub": "Passthrough token",
                      "exp": "${contexts.oauth2.accessToken.expiresAt}",
                      "requested_scope": "https://api.companieshouse.gov.uk/company/admin.write-full",
                      "token_permissions":{
                        "company_accounts":"update",
                        "company_auth_code":"update,delete",
                        "company_confirmation_statement":"create,read,update",
                        "company_number":"00006400",
                        "company_promise_to_file":"update",
                        "company_roa":"update",
                        "company_status":"update",
                        "company_transactions":"read",
                        "user_profile":"read"
                      },
                      "user_details":{
                        "forename":"",
                        "surname":"",
                        "email":"demo@ch.gov.uk",
                        "user_id":"Y2VkZWVlMzhlZWFjY2M4MzQ3MT"
                      },
                      "client_id":"1234567890.apps.ch.gov.uk"
                    },
                    "secretsProvider": "SecretStore-ENV",
                    "encryption": {
                      "secretId":  "signing.key.secret",
                      "algorithm": "dir",
                      "method": "A128CBC-HS256"
                    }
                  }
                },
                {
                  "name": "HeaderFilter-ERIC",
                  "type": "HeaderFilter",
                  "config": {
                    "messageType": "REQUEST",
                    "remove": [
                      "Authorization"
                    ],
                    "add": {
                      "Authorization": [ "Bearer eric.${contexts.jwtBuilder.value}" ]
                    }
                  }
                }
              ],
              "handler": "DispatchHandler"
            }
          }
        }
      ]
    }
  }
}